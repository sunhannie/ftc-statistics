{
  "name": "ftc-statistics",
  "version": "1.0.0",
  "description": "number statistic",
  "main": "app.js",
  "engines": {
    "node": ">=8.7.0"
  },
  "scripts": {
    "test": "node ./test/bertha-url.js && DEBUG=nums* node ./test/dashboards.js && DEBUG=nums* node ./test/sheet-to-dash.js",
    "postinstall": "bower install",
    "postversion": "git push && git push --tags",
    "model": "DEBUG=nums* node ./model",
    "clean": "rm -rf .tmp/* public/*",
    "build-sass": "node-sass --include-path=bower_components --output-style=compressed client/main.scss ./public/styles/main.css",
    "build-js": "rollup -c",
    "build-html": "NODE_ENV=production DEBUG=nums*,debug* node ./utils/build-page.js",
    "build-static": "npm run model && npm run build-sass && npm run build-js && npm run build-html",
    "deploy": "cp public/dashboard-china.html ../channel/numbers-china.html",
    "build": "npm run build-sass && npm run build-js",
    "start": "npm run build && npm run model && nodemon app.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sunhannie/ftc-statistics.git"
  },
  "keywords": [
    "statistic"
  ],
  "author": "hehuiyun",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/sunhannie/ftc-statistics/issues"
  },
  "homepage": "https://github.com/sunhannie/ftc-statistics#readme",
  "devDependencies": {
    "browser-sync": "^2.18.13",
    "del": "^3.0.0",
    "fs-jetpack": "^1.2.0",
    "gulp": "github:gulpjs/gulp#4.0",
    "gulp-imagemin": "^3.4.0",
    "gulp-sass": "^3.1.0",
    "gulp-sourcemaps": "^2.6.1",
    "koa-static": "^4.0.1",
    "nodemon": "^1.12.1"
  },
  "dependencies": {
    "@ftchinese/ftc-footer": "^0.2.0",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-preset-env": "^1.6.0",
    "bower": "^1.8.2",
    "debug": "^3.1.0",
    "got": "^7.1.0",
    "html-minifier": "^3.5.5",
    "inline-source": "^5.2.4",
    "koa": "^2.3.0",
    "koa-logger": "^3.1.0",
    "koa-router": "^7.2.1",
    "load-json-file": "^3.0.0",
    "moment": "^2.19.1",
    "node-sass": "^4.5.3",
    "nunjucks": "^3.0.0",
    "pify": "^3.0.0",
    "rollup": "^0.50.0",
    "rollup-plugin-babel": "^3.0.2",
    "rollup-plugin-babel-minify": "^3.1.2",
    "rollup-plugin-bower-resolve": "^0.5.0",
    "write-json-file": "^2.3.0"
  }
}
